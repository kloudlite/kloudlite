# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Proto files
[*.proto]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single
max_line_length = 100

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Taskfiles
[Taskfile.yml]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Git files
[.gitconfig]
indent_style = tab