type RouterSpec @shareable {
	region: String
	routes: [RouterSpecRoutes]
	backendProtocol: String
	basicAuth: RouterSpecBasicAuth
	domains: [String]!
	ingressClass: String
	rateLimit: RouterSpecRateLimit
	cors: RouterSpecCors
	https: RouterSpecHttps
	maxBodySizeInMB: Int
}

type Router @shareable {
	apiVersion: String
	kind: String
	metadata: Metadata! @goField(name: "objectMeta")
	overrides: Overrides
	syncStatus: SyncStatus
	spec: RouterSpec
	status: Status
}

type RouterSpecRoutes @shareable {
	rewrite: Boolean
	app: String
	lambda: String
	path: String!
	port: Int!
}

type RouterSpecBasicAuth @shareable {
	enabled: Boolean!
}

type RouterSpecCors @shareable {
	allowCredentials: Boolean
	enabled: Boolean
	origins: [String]
}

input RouterSpecRoutesIn {
	rewrite: Boolean
	app: String
	lambda: String
	path: String!
	port: Int!
}

input RouterSpecIn {
	region: String
	routes: [RouterSpecRoutesIn]
	backendProtocol: String
	basicAuth: RouterSpecBasicAuthIn
	domains: [String]!
	ingressClass: String
	rateLimit: RouterSpecRateLimitIn
	cors: RouterSpecCorsIn
	https: RouterSpecHttpsIn
	maxBodySizeInMB: Int
}

input RouterIn {
	apiVersion: String
	kind: String
	metadata: MetadataIn! @goField(name: "objectMeta")
	overrides: OverridesIn
	spec: RouterSpecIn
}

input RouterSpecBasicAuthIn {
	enabled: Boolean!
	secretName: String
	username: String
}

input RouterSpecCorsIn {
	allowCredentials: Boolean
	enabled: Boolean
	origins: [String]
}

type RouterSpecHttps @shareable {
	clusterIssuer: String
	enabled: Boolean!
	forceRedirect: Boolean
}

type RouterSpecRateLimit @shareable {
	rps: Int
	connections: Int
	enabled: Boolean
	rpm: Int
}

input RouterSpecRateLimitIn {
	rps: Int
	connections: Int
	enabled: Boolean
	rpm: Int
}

input RouterSpecHttpsIn {
	clusterIssuer: String
	enabled: Boolean!
	forceRedirect: Boolean
}

