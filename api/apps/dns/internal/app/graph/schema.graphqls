scalar Json
scalar Any

type Query {
  dns_getSite(siteId:ID!): Site!
}

extend type Account @key(fields: "id") {
  id: ID! @external
  sites:[Site]!
  edgeCname:String!
}

type Site @key(fields: "id"){
  id :ID!
  accountId: ID!
  isVerified: Boolean!
  domain: String!
  creationDate: String!
}


type Mutation {
  dns_createSite(domain:String!, accountId:ID!) :Boolean!
  dns_deleteSite(siteId:ID!) :Boolean!
  dns_VerifySite(siteId:ID!) :Boolean!
}
